[Unit]
Description={{java_app_artifact_id}} App
After=syslog.target network.target

[Service]
Type=idle
PIDFile=/run/{{java_app_artifact_id}}.pid

WorkingDirectory={{java_app_home}}
ExecStart=/usr/bin/java -Djava.security.egd=file:/dev/./urandom -Dspring.profiles.active={{jhipster_profiles}} -Duser.timezone=GMT -Xmx1024m -jar {{java_app_artifact_id}}.war
User={{java_app_user}}
Group={{java_app_user}}

TimeoutStartSec=60
TimeoutStopSec=20

[Install]
WantedBy=multi-user.target
